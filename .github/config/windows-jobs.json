{
  "crate_groups": [
    {
      "name": "client",
      "crates": ["aperturec-client-gtk3", "aperturec-client"],
      "package_crate": "aperturec-client-gtk3",
      "package_types": ["msi", "zip"],
      "image": "client-image-windows",
      "target": "x86_64-pc-windows-gnu",
      "needs_display": false
    }
  ],
  "platforms": [
    {"arch": "amd64", "runner": "ubuntu-latest"}
  ],
  "os_variants": ["fedora-40"],
  "jobs": {
    "test": {
      "artifacts": {
        "client": {
          "name": "tests",
          "paths": ["test_executables/"]
        }
      }
    },
    "build": {
      "artifacts": {
        "client": {
          "name": "client",
          "paths": ["target/x86_64-pc-windows-gnu/release/aperturec-client.exe"]
        }
      }
    },
    "package": {
      "artifacts": {
        "client": {
          "name": "client-package",
          "paths": [
            "aperturec-client-win.zip",
            "aperturec-client_*.msi"
          ]
        }
      }
    }
  }
}